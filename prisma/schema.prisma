datasource db {
  url      = env("DATABASE_URL")
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

model List {
  id    Int    @id @default(autoincrement())
  name  String
  tasks Task[]
}


model Task {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  completed   Boolean
  notified    Boolean
  List        List?   @relation(fields: [listId], references: [id])
  listId      Int?
}

model User {
  id             Int    @id @default(autoincrement())
  email          String @unique
  hashedPassword String
}
